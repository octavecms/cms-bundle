{% macro block_list_start () %}
    <div class="well well-small">
        <div data-widget="blocks-list">
{% endmacro %}

{% macro block_list_end () %}
        </div>
    </div>
{% endmacro %}

{% macro block_start (title, boxCollapsed) %}
    <div class="box box-success {% if boxCollapsed %}collapsed-box{% endif %}">
        <div class="box-header with-border">
            <i class="fa">
                <span class="fa fa-ellipsis-v"></span>
                <span class="fa fa-ellipsis-v"></span>
            </i>

            <h3 class="box-title">{{ title }}</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    {% if boxCollapsed %}
                        <i class="fa fa-plus"></i>
                    {% else %}
                        <i class="fa fa-minus"></i>
                    {% endif %}
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="block-remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body">
{% endmacro %}

{% macro block_end (options) %}
            {% if options %}
                {% if options.crudLink %}
                    <div class="alert alert-info">
                        Для изменения списка, пройдите по <a href="{{ path(options.crudLink) }}">ссылке</a>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endmacro %}