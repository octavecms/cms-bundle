{% set name = name|default('') %}
{% set value = value|default('') %}
{% set values = values|default([]) %}
{% set required = required|default(false) %}
{% set disabled = disabled|default(false) %}
{% set readonly = readonly|default(false) %}
{% set multiple = multiple|default(false) %}
{% set id = id|default('input-' ~ random()) %}
{% set checked = checked|default(false) %}
{% set label = label|default('') %}
{% set class = class|default('') %}

<div class="form-control-checkbox {{ class }}">
    <input
        id="{{ id }}"
        type="checkbox"
        name="{% if multiple %}{{ name }}[]{% else %}{{ name }}{% endif %}"
        value="{{ valueItem.id }}"
        class="sr-only"
        {% if readonly %}readonly{% endif %}
        {% if disabled %}disabled{% endif %}
        {% if checked %}checked{% endif %}
    />
    <label for="{{ id }}" class="form-control-checkbox__icon"></label>
    {% if label %}
        <label for="{{ id }}" class="form-control-checkbox__label">{{ label }}</label>
    {% endif %}
</div>