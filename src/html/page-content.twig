{% extends 'layouts/base.twig' %}

{% set languages = [
    {'id': 'ru', 'text': 'Ru'},
    {'id': 'en', 'text': 'En'}
] %}

{% set breadcrumbs = [
    {
        'icon': 'nav-grid',
        'text': 'Main page',
        'url': '/'
    },
    {
        'text': 'Company',
        'url': '/crud-list.html'
    },
    {
        'text': 'Page Content'
    }
] %}

{% set headerCrudList = [
    {
        'text': 'Page Content',
        'url': 'page-content.html',
        'active': true
    },
    {
        'text': 'Staff',
        'url': 'crud-list.html',
        'active': false
    },
    {
        'text': 'Categories',
        'url': 'crud-list.html',
        'active': false
    }
] %}

{% set headerStickyNavigation = [
    {
        'text': 'General',
        'url': '#general'
    },
    {
        'text': 'SEO Settings',
        'url': '#seo'
    },
    {
        'text': 'Content',
        'url': '#content'
    }
] %}


{% block content %}

    <form class="container container-h container-v"
        data-plugin="tabs"
        data-tabs-animate="false"
        data-tabs-input-selector='input[name="language"]'
        method="POST"
        action=""
    >
        <div class="row row--pad">
            <div class="col col--xs-9">
                {% include 'partials/page-content/content.twig' %}
            </div>
            <div class="col col--xs-3">
                {% include 'partials/article-edit/sidebar.twig' %}
            </div>
        </div>
    </form>

{% endblock %}


{% block modal %}
    {{ parent() }}
    {% include 'partials/page-content-modal/modal.twig' %}
{% endblock %}
