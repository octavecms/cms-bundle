<div class="image-list image-list--small">
    <ol class="image-list__list js-image-list-list">

        {# Item template #}
        <script type="text/template">
            <% if (loading) { %>
                <li class="loader"></li>
            <% } else { %>
                <% each(items, (id) => { %>
                    <% var file = store.files.list[id].get(); %>

                    <li class="image-list__list__item image-item js-image-list-item <%- !file.searchMatch ? 'd-none' : '' %> <%- file.loading ? 'is-loading' : '' %> <%- selected.indexOf(id) !== -1 ? 'is-selected' : '' %>" aria-label="Image <%- file.filename %>" data-id="<%- id %>">
                        <span class="image-item__loader"><span class="loader loader--faded loader--sm"></span></span>

                        <div class="image-item__sizer">
                            <figure class="image-item__image">
                                <% if (file.image) { %>
                                    <img loading="lazy" data-full-image-url="<%- file.url %>" src="<%- file.image %>" alt="<%- file.filename %>" draggable="false" onerror="this.src='/assets/images/file-icons/unknown.png'"/>
                                <% } else { %>
                                    <img loading="lazy" data-full-image-url="<%- file.url %>" src="/assets/images/file-icons/<%- file.icon %>.png" alt="<%- file.icon %>" draggable="false" />
                                <% } %>
                            </figure>
                        </div>
                        <div class="image-item__text">
                            <p class="text-truncate-fade"><%- file.filename %></p>
                        </div>

                        <a class="image-item__overlay" href="<%- file.url || file.image %>"></a>
                    </li>
                <% }) %>

                <li class="js-image-list-empty-search media-filelist-search-empty d-none">
                    There are no files matching search query
                </li>
                <li class="js-image-list-empty media-filelist-empty d-none">
                    There are no files in the folder
                </li>
            <% } %>
        </script>

    </ol>
</div>