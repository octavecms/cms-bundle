{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% import 'VideInfraCMSBundle:Block:macros.html.twig' as blocks %}


{% block sonata_page_content_header %}

    <nav class="navbar navbar-default" role="navigation" style="width: auto;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    {% if isNew %}
                        {{ 'add_new' | trans({}, 'VideInfraCMSBundle') }}
                    {% else %}
                        {{ 'edit' | trans({}, 'VideInfraCMSBundle') }} "{{ page.title }}"
                    {% endif %}
                </a>
            </div>

            <div class="navbar-collapse">
                <div class="navbar-left"></div>

                <ul class="nav navbar-blocks navbar-nav navbar-right">

                    {# New Text block template #}
                    {# This is the same HTML as in block list, but with name containing __name__ #}
                    {% set input_block_html %}
                        {{ blocks.block_start('Line input') }}
                            <input type="hidden" name="blocks[__name__][order]" value="__order__" />

                            {# Standard form_row(...) but with name containing __name__ #}
