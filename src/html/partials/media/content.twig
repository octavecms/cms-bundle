<div class="row media-layout card__content">
    <div class="col ui-background media-layout__folders ui-gray ui-background">
        folders
    </div>
    <div class="col col--xs-fill media-layout__content card__body ui-light ui-background">
        <div class="image-list">

            {# Item template #}
            <script type="text/template" data-template-variable="file">
                <li class="image-list__list__item image-item js-image-list-item" aria-label="Image <%- file.filename %>">
                    <div class="image-item__sizer"></div>
                    <figure class="image-item__image">
                        <% if (file.image) { %>
                            <img src="<%- file.image %>" alt="<%- file.filename %>" draggable="false" />
                        <% } else { %>
                            @TODO Icon
                        <% } %>
                    </figure>
                    <div class="image-item__text">
                        <p class="text-truncate-fade"><%- file.filename %></p>
                    </div>
                </li>
            </script>

        </div>
    </div>
    <div class="col media-layout__info ui-light ui-background">
        
        {# Folder is selected view #}
        <script type="text/template" data-template-variable="info" class="js-media-info-folder">
            @TODO
        </script>

        {# List of files are selected view #}
        <script type="text/template" data-template-variable="info" class="js-media-info-files">
            <div class="media-layout__info__image">
                @TODO
            </div>
        </script>

        {# Single files is selected view #}
        <script type="text/template" data-template-variable="info" class="js-media-info-file">
            <div class="media-layout__info__image">
                @TODO
            </div>
        </script>

    </div>
</div>