<div class="modal modal--overlay modal--side d-none" id="philosophy-form-modal"
    role="dialog" aria-label="Philosophy"
    data-plugin="modal tabs"
    {# data-modal-auto-close="false" #}
    data-tabs-animate="false"
    data-tabs-input-selector='.js-philosophy-modal-language input[name="language"]'
    aria-hidden="true"
>

    {#
    Separate element for background to allow more interesting show / hide
    animations. Background is usually darker overlay over the page content
    #}
    <div class="modal__background"></div>

    {# Element to allow scrolling when content exceeds viewport size #}
    <div class="modal__scroller">

        {#
        This element is used to position modal content + add paddings between
        modal content and viewport
        #}
        <div class="modal__content-wrapper">
            <form class="modal__content ui-gray-background card card--modal card--sticky-header form-wide js-modal-ignore-auto-close">

                {% include 'partials/page-content/modals/philosophy/header.twig' %}

                <div class="card__content">
                    <div class="card__body ui-gray-background"
                        {# Sortable list #}
                        data-plugin="sortableList"
                        data-sortable-list-invert-swap="true"
                    >

                        <div class="card-list js-sortable-list-list">

                            {% include 'partials/page-content/modals/philosophy/section-general.twig' with {
                                'sectionId': null,
                            } %}

                            {% include 'partials/page-content/modals/philosophy/section-property.twig' with {
                                'sectionId': null,
                            } %}

                            {% include 'partials/page-content/modals/philosophy/section-assets.twig' with {
                                'sectionId': null,
                            } %}

                            {% include 'partials/page-content/modals/philosophy/section-strategy.twig' with {
                                'sectionId': null,
                            } %}

                        </div>

                    </div>
                </div>

            </form>
        </div>
    </div>

</div>
