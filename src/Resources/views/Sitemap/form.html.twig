<form role="form" class="hidden overlay-wrapper" data-widget="sitemap-form" autocomplete="off">
    <div class="overlay hidden">
        <i class="fa fa-refresh fa-spin"></i>
    </div>

    <div class="modal-body">
        <div class="alert alert-danger hidden" role="alert"></div>

        <div class="form-group">
            <label for="newPageTitle">{{ 'page_title' | trans({}, 'OctaveCMSBundle') }}</label>
            <input type="text" class="form-control" id="newPageTitle" placeholder="" required name="title" />
        </div>
        <div class="form-group">
            <label for="newPagePath">{{ 'page_path' | trans({}, 'OctaveCMSBundle') }}</label>
            <input type="text" class="form-control" id="newPagePath" placeholder="" required name="path" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="reset" class="btn btn-default pull-left">{{ 'page_cancel' | trans({}, 'OctaveCMSBundle') }}</button>
        <button type="submit" class="btn btn-primary">{{ 'page_create' | trans({}, 'OctaveCMSBundle') }}</button>
    </div>
</form>