{% from 'partials/blocks/form_rows.twig' import form_rows %}

{% set namePrefix = namePrefix|default('') %}
{% set values = values|default({}) %}


{{ form_rows([
    {
        compound: true,
        attr: { class: 'form-grid-layout' },
        children: [
            {
                type: 'text',
                label: 'List Title',
                name: namePrefix ~ '[list-title]',
                full_name: namePrefix ~ '[list-title]',
                value: values['list-title']|default(''),
                required: true
            },
        ]
    },
    {
        type: 'textarea',
        label: 'Main Title',
        name: namePrefix ~ '[main-title]',
        full_name: namePrefix ~ '[main-title]',
        value: values['main-title']|default(''),
        required: true,
        attr: {
            class: 'form-control--textarea--short',
            maxlength: 512,
        }
    },
    {
        type: 'textarea',
        label: 'Text',
        name: namePrefix ~ '[text]',
        full_name: namePrefix ~ '[text]',
        value: values['text']|default(''),
        required: true,
    }
]) }}