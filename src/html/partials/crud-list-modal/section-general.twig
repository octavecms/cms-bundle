{% from 'partials/blocks/form_rows.twig' import form_rows %}
{% from 'partials/blocks/form_row.twig' import form_row %}


<div class="card js-sortable-list-force-start">
    <header class="card__header">
        <div class="group group--middle group--5">
            {# Title #}
            <h2 class="group__fill" id="modalGeneralTitle">General Settings</h2>

            {# Control #}
            <div>
                
                <div class="form-control-switch">
                    <input class="form-control-switch__input" type="checkbox" id="input-dggsfaw3rqa4t34r3ra" name="active" value="1" checked="checked" />
                    <label class="form-control-switch__label text-color-heading" for="input-dggsfaw3rqa4t34r3ra">Online</label>
                    <span class="form-control-switch__icon"></span>
                </div>

            </div>
        </div>
    </header>

    <div aria-labelledby="modalGeneralTitle" class="card__content">
        <div class="card__body">
            
            {# Localized title, duplicate for each content, in the real app this won't be a copy #}
            <div class="tabs-contents">
                {% for languageItem in languages %}
                    <div class="tabs-contents__content" {% if not loop.first %}aria-hidden="true"{% endif %} data-tabs-content-id="{{ languageItem.id }}">
                        {# Locale tab content #}
                        {% set language = languageItem.id %}

                        {# Title #}
                        {{ form_row({
                            type: 'text',
                            label: 'Name',
                            name: 'name[' ~ language ~ ']',
                            full_name: 'name[' ~ language ~ ']',
                            value: 'Александр Самонов',
                            required: true,
                        }) }}

                    </div>
                {% endfor %}
            </div>

            {{ form_rows([
                {
                    type: 'choice',
                    label: 'Company',
                    name: 'company',
                    full_name: 'company',
                    value: 'a',
                    choices: [
                        {value: 'a', label: 'Accent Capital'},
                        {value: 'b', label: 'Accent Asset Management'}
                    ],
                    required: true,
                },
                {
                    name: 'image',
                    full_name: 'image',
                    type: 'image',
                    label: 'Image',
                    value: {
                        id: 'qweasdzxc',
                        thumbnail: '/assets/images/temp/table/1.png',
                        url: '/assets/images/temp/table/1.png',
                        filename: '1.png',
                        width: 128,
                        height: 128
                    },
                    required: false,
                    minWidth: 128,
                    minHeight: 128,
                },
            ]) }}

        </div>
    </div>
</div>
