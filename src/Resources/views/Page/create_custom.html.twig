{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">

        $(document).ready(function(){

            $('.js_add_option').click(function (e) {
                e.preventDefault();
                var container = $('.js_page_options');
                container.append($(this).data('template'));
            });

            $('.js_page_options').on('click', '.js_remove_option', function(e) {
                e.preventDefault();
                $(this).parents('.row-option').remove();
            });
        });

    </script>

{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <style>
        .row-option {
            margin-bottom: 15px;
        }
    </style>

{% endblock %}

{% block sonata_page_content_header %}

    {% if not isNew %}
    <nav class="navbar navbar-default" role="navigation" style="width: auto;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">{{ 'edit' | trans({}, 'VideInfraCMSBundle') }} "{{ page.title }}"</a>
            </div>

            <div class="navbar-collapse">
                <div class="navbar-left"></div>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown sonata-actions">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{ 'actions' | trans({}, 'VideInfraCMSBundle') }} <b class="caret"></b></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a class="sonata-action-element" href="{{ path('sitemap_page_create_type', {type: page.type}) }}">
                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                    {{ 'add_new' | trans({}, 'VideInfraCMSBundle') }}
                                </a>
                            </li>
                            <li>
                                <a class="sonata-action-element" href="{{ path('sitemap_list') }}">
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    {{ 'return_to_list' | trans({}, 'VideInfraCMSBundle') }}
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    {% endif %}

{% endblock %}

{% block content %}

    {% form_theme form 'SonataAdminBundle:Form:form_admin_fields.html.twig' %}

    {{ form_start(form) }}
    <div class="row">

        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header"><h4>{{ 'general' | trans({}, 'VideInfraCMSBundle') }}</h4></div>
                <div class="box-body">
                    {% if isAdmin %}
                        {{ form_row(form.name) }}
                    {% endif %}

                    {{ form_row(form.title) }}
                    {{ form_row(form.active) }}
                    {{ form_row(form.path) }}

                    {% if isAdmin %}

                        {{ form_row(form.controller) }}

                        {% set optionTemplate = '<div class="row row-option">
                            <div class="col-md-4">
                                <input class="form-control" type="text" name="option[name][]" value="" placeholder="' ~ ('option_name' | trans({}, 'VideInfraCMSBundle')) ~ '">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="option[value][]" value="" placeholder="' ~ ('option_value' | trans({}, 'VideInfraCMSBundle')) ~ '">
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-default js_remove_option" type="button"><i class="fa fa-remove"></i></button>
                            </div>
                        </div>' %}

                        <div class="row">
                            <div class="col-md-12">
                                <label class="control-label">{{ 'options' | trans({}, 'VideInfraCMSBundle') }}</label>
                                <p>
                                    <button class="btn btn-default js_add_option"
                                            data-template="{{ optionTemplate | e('html_attr') }}">{{ 'add_new' | trans({}, 'VideInfraCMSBundle') }}</button>
                                </p>
                            </div>
                        </div>

                        <div class="js_page_options">
                            {% if page %}
                                {% for name, value in page.options %}
                                    <div class="row row-option">
                                        <div class="col-md-4">
                                            <input class="form-control" name="option[name][]" type="text" value="{{ name }}"
                                                   placeholder="{{ 'option_name' | trans({}, 'VideInfraCMSBundle') }}">
                                        </div>
                                        <div class="col-md-6">
                                            <input class="form-control" name="option[value][]" type="text" value="{{ value }}"
                                                   placeholder="{{ 'option_value' | trans({}, 'VideInfraCMSBundle') }}">
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-default js_remove_option" type="button"><i class="fa fa-remove"></i></button>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header"><h4>{{ 'seo' | trans({}, 'VideInfraCMSBundle') }}</h4></div>
                <div class="box-body">
                    {{ form_row(form.translations) }}
                </div>
            </div>
        </div>

    </div>

    <div class="sonata-ba-form-actions well well-small form-actions">
        {% if isNew %}
            <button class="btn btn-success" type="submit" name="create_and_list" value="1">{{ 'create_and_list' | trans({}, 'VideInfraCMSBundle') }}</button>
            <button class="btn btn-success" type="submit" name="create_and_create" value="1">{{ 'create_and_create' | trans({}, 'VideInfraCMSBundle') }}</button>
        {% else %}
            <button class="btn btn-success" type="submit" name="update_and_list" value="1">{{ 'update_and_list' | trans({}, 'VideInfraCMSBundle') }}</button>
            <button class="btn btn-success" type="submit" name="update_and_edit" value="1">{{ 'update_and_edit' | trans({}, 'VideInfraCMSBundle') }}</button>
        {% endif %}
    </div>

    {{ form_end(form) }}

{% endblock %}