{% macro form_widget_url (attr) -%}
    {%- from 'partials/blocks/form_widget_simple.twig' import form_widget_simple -%}

    {%- set widget_attr = attr.attr|default({}) -%}
    {%- set widget_attr = {}|merge(widget_attr)|merge({'pattern': '[A-Za-z0-9-_]*'}) -%}
    {%- set attr = {}|merge(attr)|merge({'type': 'text', 'attr': widget_attr}) -%}

    {{- form_widget_simple(attr) -}}
{%- endmacro %}